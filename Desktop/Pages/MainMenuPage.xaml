<Page x:Class="Desktop.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Desktop.Pages"
      mc:Ignorable="d"
      Title="Главное меню"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <StackPanel Orientation="Vertical"
                VerticalAlignment="Center">
        <Button x:Name="ModulesButton"
                Style="{StaticResource Main-Button}"
                Click="ModulesButton_OnClick"
                HorizontalAlignment="Stretch"
                Content="Адаптационные модули" />
        <Button x:Name="ConstructorButton"
                Style="{StaticResource Main-Button}"
                Click="ConstructorButton_OnClick"
                HorizontalAlignment="Stretch"
                Content="Конструктор" />
        <Button x:Name="AnalyzeButton"
                Style="{StaticResource Main-Button}"
                Click="AnalyzeButton_OnClick"
                HorizontalAlignment="Stretch"
                Content="Анализ адаптационных мероприятий" />
    </StackPanel>
</Page>